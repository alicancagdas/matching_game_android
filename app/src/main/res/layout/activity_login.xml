<?xml version="1.0" encoding="utf-8"?>
<AbsoluteLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="0.4dp"
    android:background="@drawable/bkg1"
    app:layout_keyline="@integer/material_motion_duration_long_2"
    tools:context=".LoginActivity">




    <EditText
        android:id="@+id/email"
        android:layout_width="341dp"
        android:layout_height="wrap_content"
        android:layout_x="38dp"
        android:layout_y="90dp"
        android:background="@drawable/editext_background"
        android:drawableLeft="@android:drawable/ic_dialog_email"
        android:drawablePadding="15dp"
        android:hint="Email adress"
        android:minHeight="48dp"
        android:padding="18dp"
        android:textColor="@color/design_default_color_surface"
        android:textColorHighlight="@color/design_default_color_error"
        android:textColorHint="#CCC8C4"
        android:textColorLink="@color/material_dynamic_neutral20"
        android:textSize="18sp"
        app:drawableTint="#DBFF99"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="70dp" />

    <EditText
        android:id="@+id/password"
        android:layout_width="341dp"
        android:layout_height="wrap_content"
        android:layout_x="32dp"
        android:layout_y="180dp"
        android:background="@drawable/editext_background"
        android:drawableLeft="@android:drawable/ic_lock_idle_lock"
        android:drawablePadding="15dp"
        android:hint="Password"
        android:inputType="textPassword"
        android:minHeight="48dp"
        android:padding="18dp"
        android:textColorHint="#CCC8C4"
        android:textScaleX="1"
        app:drawableTint="#df9"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="156dp" />

    <EditText
        android:id="@+id/userName"
        android:layout_width="341dp"
        android:layout_height="wrap_content"
        android:layout_x="32dp"
        android:layout_y="270dp"
        android:background="@drawable/editext_background"
        android:hint="User Name"
        android:minHeight="48dp"
        android:padding="18dp"
        android:textColor="@color/white"
        android:textColorHint="#CCC8C4"
        android:textColorLink="@color/purple_200"
        android:textScaleX="1"
        android:textStyle="normal"
        tools:layout_editor_absoluteX="29dp"
        tools:layout_editor_absoluteY="229dp" />

    <Button
        android:id="@+id/login"
        android:layout_width="228dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_x="83dp"
        android:layout_y="360dp"
          android:insetLeft="4dp"
        android:insetTop="6dp"
        android:insetRight="10dp"
        android:shadowColor="@color/black"
        android:text="LOGIN"
        android:textColor="#e4d8"
        android:textColorHint="@color/material_dynamic_secondary50"
        android:textColorLink="@color/cardview_dark_background"
        android:translationX="3dp"
        app:rippleColor="@color/black"
        app:strokeColor="#502727"
        android:backgroundTint="#123d"
        tools:layout_editor_absoluteX="52dp"
        tools:layout_editor_absoluteY="315dp" />

    <TextView
        android:id="@+id/resetPassword"
        android:layout_width="180dp"
        android:layout_height="26dp"
        android:layout_gravity="left"
        android:layout_x="86dp"
        android:layout_y="422dp"
        android:background="@color/cardview_shadow_start_color"
        android:drawableLeft="@android:drawable/sym_action_email"
        android:drawablePadding="15dp"
        android:elegantTextHeight="true"
        android:padding="5dp"
        android:text="Reset Password"
        android:textAllCaps="true"
        android:textColor="#9fff"
        android:textSize="12sp"
        android:textStyle="bold"
        tools:layout_editor_absoluteX="69dp"
        tools:layout_editor_absoluteY="363dp" />

    <TextView
        android:id="@+id/goToSignUpActivty"
        android:layout_width="258dp"
        android:layout_height="wrap_content"
        android:layout_gravity="left"
        android:layout_x="22dp"
        android:layout_y="485dp"
        android:background="@color/common_google_signin_btn_text_light_disabled"
        android:backgroundTint="@color/material_dynamic_primary60"
        android:drawableLeft="@android:drawable/ic_input_add"
        android:drawablePadding="15dp"
        android:elegantTextHeight="true"
        android:scaleX="1"
        android:scaleY="1"
        android:shadowColor="@color/black"
        android:text="Create Account"
        android:textAllCaps="true"
        android:textColor="#9fff"
        android:textSize="18dp"
        android:textStyle="bold"

        android:translationX="@dimen/cardview_default_radius"
        app:drawableTint="@color/material_dynamic_tertiary10"
        app:drawableTintMode="add"
        tools:layout_editor_absoluteX="27dp"
        tools:layout_editor_absoluteY="469dp" />


</AbsoluteLayout>